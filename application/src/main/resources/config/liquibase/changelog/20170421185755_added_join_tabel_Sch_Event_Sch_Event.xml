<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity LibMediaItem.
    -->
    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="sch_event_sch_event">
            <column name="parent_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="child_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="parent_id, child_id" tableName="sch_event_sch_event"/>
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="sch_event_sch_event"
                                 constraintName="fk_sch_event_parent_id_child_id_parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_event"/>

        <addForeignKeyConstraint baseColumnNames="child_id"
                                 baseTableName="sch_event_sch_event"
                                 constraintName="fk_sch_event_parent_id_media_library_file__id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_event"/>
    </changeSet>
</databaseChangeLog>

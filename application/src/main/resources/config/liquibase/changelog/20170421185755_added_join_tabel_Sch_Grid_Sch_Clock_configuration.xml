<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity LibMediaItem.
    -->
    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="sch_grid_sch_clock_configuration">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sequence" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sch_grid_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sch_clock_configuration_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by_id" type="bigint"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="sch_grid_id"
                                 baseTableName="sch_grid_sch_clock_configuration"
                                 constraintName="fk_sch_grid_sch_clock_configuration_channel_sch_grid_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_grid"/>
        <addForeignKeyConstraint baseColumnNames="sch_clock_configuration_id"
                                 baseTableName="sch_grid_sch_clock_configuration"
                                 constraintName="fk_sch_grid_sch_clock_configuration_sch_clock_configuration_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_clock_configuration"/>
        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="sch_grid_sch_clock_configuration"
                                 constraintName="fk_sch_grid_sch_clock_configuration_sch_clock_configuration_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_user"/>

        <addForeignKeyConstraint baseColumnNames="last_modified_by_id"
                                 baseTableName="sch_grid_sch_clock_configuration"
                                 constraintName="fk_sch_grid_sch_clock_configuration_sch_clock_configuration_last_modified_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_user"/>
    </changeSet>
</databaseChangeLog>

    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="sch_clock_template_sch_event_template">
            <column name="sch_clock_template_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sch_event_template_id" type="bigint">
                <constraints nullable="false"/>

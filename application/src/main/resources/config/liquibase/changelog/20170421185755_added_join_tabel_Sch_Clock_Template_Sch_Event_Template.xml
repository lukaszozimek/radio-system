        </createTable>

        <addPrimaryKey columnNames="sch_clock_template_id, sch_event_template_id" tableName="sch_clock_template_sch_event_template"/>
        <addForeignKeyConstraint baseColumnNames="sch_clock_template_id"
                                 baseTableName="sch_clock_template_sch_event_template"
                                 constraintName="fk_sch_clock_template_sch_event_template_sch_clock_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_clock_template"/>

        <addForeignKeyConstraint baseColumnNames="sch_event_template_id"
                                 baseTableName="sch_clock_template_sch_event_template"
                                 constraintName="fk_sch_clock_template_sch_event_template_sch_event_template_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_event_template"/>
    </changeSet>
</databaseChangeLog>

        <addForeignKeyConstraint baseColumnNames="last_modified_by_id"
                                 baseTableName="sch_emission_configuration"
                                 constraintName="fk_sch_emission_configuration_last_modified_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_user"/>

    </changeSet>
</databaseChangeLog>

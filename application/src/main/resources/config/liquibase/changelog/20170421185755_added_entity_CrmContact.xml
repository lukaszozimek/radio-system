<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity CrmContact.
    -->
    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="crm_contact">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="short_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="external_id_1" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="external_id_2" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="payment_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="payment_delay" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="vat_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="addres_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <column name="country_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <column name="person_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <column name="network_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="range_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="size_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="industry_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="area_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="keeper_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="status_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="cor_image_item_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by_id" type="bigint"/>
            <column name="last_modified_date" type="timestamp"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Attachment.
    -->
    <changeSet id="20170720190705-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="media_item_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_attachment_configuration_media_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lib_media_item"/>

        <addForeignKeyConstraint baseColumnNames="emission_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_attachment_configuration_emission_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_emission_configuration"/>

        <addForeignKeyConstraint baseColumnNames="network_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_sch_attachment_configuration_network_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_network"/>

        <addForeignKeyConstraint baseColumnNames="channel_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_sch_attachment_configuration_channel_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_channel"/>

        <addForeignKeyConstraint baseColumnNames="created_by_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_sch_attachment_configuration_created_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_user"/>

        <addForeignKeyConstraint baseColumnNames="last_modified_by_id"
                                 baseTableName="sch_attachment_configuration"
                                 constraintName="fk_sch_attachment_configuration_last_modified_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_user"/>
    </changeSet>
</databaseChangeLog>

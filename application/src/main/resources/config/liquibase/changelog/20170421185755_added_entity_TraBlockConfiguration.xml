<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity TraBlockConfiguration.
    -->
    <changeSet id="20170515200401-1" author="jhipster">
        <createTable tableName="tra_block_configuration">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="length" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="start_block" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="sequence" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="block_start_sound_id" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="block_end_sound_id" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="stop_block" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="network_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="channel_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by_id" type="bigint"/>
            <column name="last_modified_date" type="timestamp"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>

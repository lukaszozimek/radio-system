<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity TraOrder.
    -->
    <changeSet id="20170525201839-1" author="jhipster">
        <createTable tableName="tra_order">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="start_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="end_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="calculated_prize" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="customer_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="price" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="custom_discount" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="network_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="status_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="advertisment_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="campaign_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="invoice_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by_id" type="bigint"/>
            <column name="last_modified_date" type="timestamp"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>

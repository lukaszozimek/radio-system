<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity LibMediaItem.
    -->
    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="lib_album_lib_image_item">

            <column name="lib_album_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="lib_image_item_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <addPrimaryKey columnNames="lib_album_id, lib_image_item_id" tableName="lib_album_lib_image_item"/>
        <addForeignKeyConstraint baseColumnNames="lib_album_id"
                                 baseTableName="lib_album_lib_image_item"
                                 constraintName="fk_lib_album_lib_image_item_lib_album_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lib_album"/>


        <addForeignKeyConstraint baseColumnNames="lib_image_item_id"
                                 baseTableName="lib_album_lib_image_item"
                                 constraintName="fk_lib_album_lib_image_item_image_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lib_image_item"/>
    </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity SchBlock.
    -->
    <changeSet id="20170227170736-1" author="jhipster">
        <createTable tableName="sch_block">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="seq" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="start_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="relative_delay" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="scheduled_start_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="scheduled_end_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="scheduled_length" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="start_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="end_time" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="length" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="dim_year" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="dim_month" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="dim_day" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="dim_hour" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="dim_minute" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="dim_second" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="playlist_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="template_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="parent_block_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="sch_block" columnName="scheduled_start_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="sch_block" columnName="scheduled_end_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="sch_block" columnName="start_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="sch_block" columnName="end_time" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>

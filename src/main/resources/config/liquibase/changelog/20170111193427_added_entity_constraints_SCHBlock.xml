<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity SCHBlock.
    -->
    <changeSet id="20170111193427-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="parent_block_id"
                                 baseTableName="sch_block"
                                 constraintName="fk_schblock_parent_block_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_block"/>

        <addForeignKeyConstraint baseColumnNames="channel_id"
                                 baseTableName="sch_block"
                                 constraintName="fk_schblock_channel_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cor_channel"/>

        <addForeignKeyConstraint baseColumnNames="template_id"
                                 baseTableName="sch_block"
                                 constraintName="fk_schblock_template_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sch_template"/>

    </changeSet>
</databaseChangeLog>

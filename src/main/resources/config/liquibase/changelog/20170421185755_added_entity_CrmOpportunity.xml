<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity CrmOpportunity.
    -->
    <changeSet id="20170421185755-1" author="jhipster">
        <createTable tableName="crm_opportunity">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="short_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="last_try" type="date">
                <constraints nullable="true" />
            </column>

            <column name="close_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="probability" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="stage_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="keeper_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="contact_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="account_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="lead_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="network_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>
